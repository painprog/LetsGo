@model LetsGo.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="w-50 mx-auto p-4 mt-4 entry-form">
    <h1 class="text-center">Вход на сайт</h1>
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="LoginOrEmail" class="control-label"></label>
            <input asp-for="LoginOrEmail" class="form-control input-field" />
            <span asp-validation-for="LoginOrEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Введите пароль</label>
            <input asp-for="Password" class="form-control input-field"  id="password"/>
            <span class="password-icon"><i class="bi bi-eye-slash" id="togglePassword"></i></span>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>
            <input asp-for="RememberMe" class="checkbox" />
            <label asp-for="RememberMe"></label>
        </div>
        <div class="form-group text-center mt-3">
            <input type="submit" value="Войти" class="btn btn-primary form-control btn-submit" />
        </div>
    </form>
    <a asp-controller="Account" asp-action="OrganizerSignUp" class="link">Зарегистрироваться как организатор</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var togglePassword = document.querySelector('#togglePassword');
        var password = document.querySelector('#password');
        togglePassword.addEventListener('click', function (e) {
            var type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            this.classList.toggle('bi-eye');
        });
    </script>
}

<style>
    body {
        background-image: linear-gradient(to top, #e6e9f0 0%, #eef1f5 100%);
    }
</style>