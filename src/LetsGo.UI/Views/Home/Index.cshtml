                                <h2 class="category-header">@Localizer["Perfomances"]</h2>
                            </div>
                            <div class="col-1 p-0 ps-4">
                                <a asp-controller="Category" asp-action="Performances" class="more-btn round">
                                    <span class="icon-more">
