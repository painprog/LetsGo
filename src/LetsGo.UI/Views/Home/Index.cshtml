<div class="events pt-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <div class="categories">
                    <div class="concerts">
                        <div class="row justify-content-between">
                            <div class="col-11">
                                <h2 class="category-header">@Localizer["Concerts"]</h2>
                            </div>
                            <div class="col-1 p-0 ps-4">
                                <a asp-controller="Category" asp-action="Concerts" class="more-btn round">
                                    <span class="icon-more">
                                        <i class="fas fa-arrow-right"></i>
                                    </span>
                                </a>
                            </div>
                        </div>

                        <div id="all-concerts" class="row">
                            @foreach (var concert in Model.Concerts)
                            {
                                <div class="col-md-4">
                                    <div class="card p-0">
                                        <div class="card-block-img" onclick="Details('@concert.Id')">
                                            <img src="@concert.PosterImage" alt="@concert.Name">
                                            <div class="wrapper">
                                                <div class="card-age">@concert.AgeLimit+</div>
                                            </div>
                                            <div class="card-tag">
                                                <a href="#">@Localizer["Concerts"]</a>
                                            </div>
                                        </div>
                                        <div class="card-block-description">
                                            <div class="card-title" onclick="Details('@concert.Id')">
                                                @Localizer["Concert"] "@concert.Name"
                                            </div>
                                            <div class="card-description">
                                                <div class="card-date">
                                                    @concert.EventStart.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("ru-RU")) @Localizer["At"] @concert.EventStart.ToString("HH:mm")
                                                </div>
                                                <div class="card-venue">
                                                    <a class="card-venue-link" href="#" onclick="LocationDetails('@concert.LocationId')">
                                                        @concert.Location.Name
                                                    </a>
                                                </div>
                                                <a href="#" class="card-price">
                                                    @Localizer["Price"] @concert.MinPrice @Localizer["som"]
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="festivals">
                        <div class="row justify-content-between">
                            <div class="col-11">
                                <h2 class="category-header">@Localizer["Festivals"]</h2>
                            </div>
                            <div class="col-1 p-0 ps-4">
                                <a asp-controller="Category" asp-action="Festivals" class="more-btn round">
                                    <span class="icon-more">
                                        <i class="fas fa-arrow-right"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                        <div id="all-festivals" class="row row-cols-1 row-cols-md-3">
                            @foreach (var festival in Model.Festivals)
                            {
                                <div class="col-md-4">
                                    <div class="card p-0">
                                        <div class="card-block-img" onclick="Details('@festival.Id')">
                                            <img src="@festival.PosterImage" alt="@festival.Name">
                                            <a href="#"></a>
                                            <div class="wrapper">
                                                <div class="card-age">@festival.AgeLimit+</div>
                                            </div>
                                            <div class="card-tag">
                                                <a href="#">@Localizer["Festivals"]</a>
                                            </div>
                                        </div>
                                        <div class="card-block-description">
                                            <div class="card-title" onclick="Details('@festival.Id')">@Localizer["Festival"]"@festival.Name"</div>
                                            <div class="card-description">
                                                <div class="card-date">
                                                    @festival.EventStart.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("ru-RU")) @Localizer["At"] @festival.EventStart.ToString("HH:mm")
                                                </div>
                                                <div class="card-venue">
                                                    <a class="card-venue-link" href="#" onclick="LocationDetails('@festival.LocationId')">
                                                        @festival.Location.Name
                                                    </a>
                                                </div>
                                                <a href="#" class="card-price">
