@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LetsGo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/calender.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://kit-free.fontawesome.com/releases/v5.11.1/css/free.min.css" media="all">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="https://api-maps.yandex.ru/2.1/?apikey=ae5ff3aa-5291-46c2-8db9-b86cd2b9dc6c&lang=ru_RU" type="text/javascript"></script>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom text-white box-shadow border-0 nav-start w-100">
            <div class="container-fluid">
                <div id="sideNav" class="sidenav">
                    <a><span onclick="closeNav()" class="material-icons icon-close" id="closeSpan">close</span></a>
                    <div class="sideNavMenu">
                        <ul>
                            <li>
                                <a href="#">@_localizer["Cancellations"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["TermsOfReturn"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["Sites"]</a>
                            </li>
                        </ul>
                        <ul>
                            <li>
                                <a href="#">@_localizer["About"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["Contacts"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["BoxOffice"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["Requisites"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["PaymentMethods"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["ElectronicTicket"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["PublicOffer"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["PrivacyPolicy"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["Cookie"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["SubagencyAgreement"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["Compliance"]</a>
                            </li>

                        </ul>
                        <ul>
                            <li>
                                <a href="#">@_localizer["PromoCodes"]</a>
                            </li>
                            <li>
                                <a href="#">@_localizer["Banners"]</a>
                            </li>
                        </ul>
                        <ul>
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <a asp-controller="Account" asp-action="Login">@_localizer["Login"]</a>
                                </li>
                            }
                                <li>
                                    <a href="#">@_localizer["CorporateClients"]</a>
                                </li>
                                <li>
                                    <a href="#">@_localizer["PersonalAccount"]</a>
                                </li>
                                <li>
                                    <a href="#">@_localizer["AffiliateProgram"]</a>
                                </li>
                            </ul>
                    </div>
                </div>
                <div class="fog"></div>
                <div onclick="openNav()" class="mr-4">
                    <a><span class="material-icons icon-menu d-block">maximize</span></a>
                    <a><span class="material-icons icon-menu d-block">maximize</span></a>
                </div>
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"></a>
                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>*@
                <div class="nav-item">
                    <a id="category-link" class="nav-link text-white menu-link">@_localizer["Categories"]</a>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="concerts-link" class="nav-link text-white menu-link" asp-controller="Category" asp-action="Concerts"> @_localizer["Concerts"]</a>
                        </li>
                        <li class="nav-item">
                            <a id="performances-link" class="nav-link text-white menu-link" asp-controller="Category" asp-action="Performances"> @_localizer["Performances"]</a>
                        </li>
                        <li class="nav-item">
                            <a id="children-link" class="nav-link text-white menu-link" asp-controller="Category" asp-action="Children"> @_localizer["ForChildren"]</a>
                        </li>
                        <li class="nav-item">
                            <a id="classic-link" class="nav-link text-white menu-link" asp-controller="Category" asp-action="Classic"> @_localizer["Classic"]</a>
                        </li>
                        <li class="nav-item">
                            <a id="excursions-link1" class="nav-link text-white menu-link" asp-controller="Category" asp-action="Excursion"> @_localizer["Excursion"]</a>
                        </li>
                        <li class="nav-item submenu-link mr-5">
                            <a id="more-link" class="nav-link text-white menu-link"> @_localizer["More"]</a>
                            <div class="submenu pt-4">
                                <a class="submenu-item" asp-controller="Category" asp-action="Festivals"> @_localizer["Festivals"]</a>
                                <a class="submenu-item" asp-controller="Category" asp-action="Other"> @_localizer["Other"]</a>
                                <a id="excursions-link2" class="submenu-item" asp-controller="Category" asp-action="Excursion">@_localizer["Excursion"]</a>
                            </div>
                        </li>
                    </ul>
                </div>

                <div class="login_group ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="nav-item submenu-link mr-5">
                            <span class="profile">
                                <i class="bi bi-person"></i>
                            </span>

                            <div class="submenu pt-4 dropdown-menu-right">
                                <a class="submenu-item" asp-controller="Cabinet" asp-action="Profile">@_localizer["LK"]</a>
                                @using (Html.BeginForm("Logout", "Account"))
                                {
                                    <a class="submenu-item">
                                        <input id="sign-out-btn" type="submit" class="border-0 submenu-item" value="@_localizer["LogOut"]" />
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div id="categories-sm" class="hide-item">
        <div class="category-header">
            <span id="close-category-sm" class="text-dark" style="font-size:40px;"><i class="bi bi-x"></i></span>
        </div>
        <div class="category-links">
            <div class="row">
                <div class="col-md-9">
                    <a href="/Category/Concerts">@_localizer["Concerts"]</a>
                    <a href="/Category/Performances">@_localizer["Performances"]</a>
                    <a href="/Category/Children">@_localizer["ForChildren"]</a>
                    <a href="/Category/Classic">@_localizer["Classic"]</a>
                    <a href="/Category/Excursion">@_localizer["Excursion"]</a>
                    <a href="/Category/Festivals">@_localizer["Festivals"]</a>
                    <a href="/Category/Other">@_localizer["Other"]</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="padding-bottom: 10rem;">
        <main role="main" class="pb-3 page-content">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="row footer-container mx-auto">
            <div class="col-lg-3 footer-link-news">
                <div class="footer-link-title"> @_localizer["News"]</div>
                <div class="footer-link">@_localizer["Owl"]</div>
            </div>
            <div class="col-lg-3 footer-link-apps">
                <div class="footer-link-title">@_localizer["mobile"]</div>
                <div class="footer-link"><span class="apple-ic"><i class="bi bi-apple"></i></span> App Store</div>
            </div>
            <div class="col-lg-2 footer-link-cards">
                <div class="footer-link-title">@_localizer["Accept"]</div>
                <div class="footer-link">
                    <span class="bank-card"><i class="fab fa-cc-visa"></i></span>
                </div>
            </div>
            <div class="col-lg-2 footer-link">
                @await Html.PartialAsync("_SelectLanguagePartial")
            </div>
            <div class="footer-address">
                <p>
                    © 2021 ООО «МДТЗК» ул. 2-ая Брестская, д.43, Москва, 123056 Телефон:  <span class="text-white">8-495-134-77-77</span> <span class="text-white">@_localizer["Form"]</span>
                </p>
            </div>
        </div>
        <br />
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/btnloadmore.js"></script>
    <script charset="windows-1251" type="text/javascript" src="~/js/calender.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function openNav() {
            $("#sideNav").animate({ left: '0px' });
            $('.fog').show();
        }
        function closeNav() {
            $("#sideNav").animate({ left: '-1000px' });
            $('.fog').hide();
        }

        $('.fog').click(function () {
            $('#sideNav').animate({ left: '-1000px' });
            $('.fog').hide();
        });


        $('.dropdown').hover(function () {
            $('.dropdown-toggle', this).trigger('click');
        });

        //$(document).scroll(function () {
        //    if (window.scrollY > screen.height) {
        //        $('.search').show();
        //        $('.navbar').addClass("nav-end");
        //        $('.navbar').removeClass("nav-start");
        //    }
        //    else {
        //        $('.search').hide();
        //        $('.navbar').addClass("nav-start");
        //        $('.navbar').removeClass('nav-end');
        //    }
        //});

        $('#category-link').on('click', function () {
            $('#categories-sm').addClass('show-item');
            $('#categories-sm').removeClass('hide-item');
        });

        $('#close-category-sm').on('click', function () {
            $('#categories-sm').addClass('hide-item');
            $('#categories-sm').removeClass('show-item');
        });

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>